{
  "includes": [
    "packages"
  ],
  "exclude": [
    "."
  ],
  "compilerOptions": {
    "incremental": true,
    "target": "ES2022",
    "module": "ES2022",
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
