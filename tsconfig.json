{
  "includes": ["packages"],
  "exclude": ["packages/test", "."],
  "compilerOptions": {
    "incremental": true,
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "outDir": "./dist",
  },
  "references": [
    {
      "path": "./packages/common"
    },
    {
      "path": "./packages/context"
    },
    {
      "path": "./packages/custom-element"
    },
    {
      "path": "./packages/form-element"
    },
    {
      "path": "./packages/rendering-element"
    },
    // {
    //   "path": "./packages/test"
    // }
  ]
}