  "references": [
    {
      "path": "./packages/common"
    },
    {
      "path": "./packages/context"
    },
    {
      "path": "./packages/custom-element"
    },
    {
      "path": "./packages/form-element"
    },
    {
      "path": "./packages/rendering-element"
    },
    {
      "path": "./packages/test"
    }
  ]
}