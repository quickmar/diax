{
    "compilerOptions": {
        "lib": [
            "ESNext",
            "DOM",
        ],
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "declaration": true,
        "strict": true,
        "incremental": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": ".",
        "outDir": "./dist",
        "composite": true
    },
}